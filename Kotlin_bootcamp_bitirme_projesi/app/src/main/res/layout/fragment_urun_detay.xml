<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.UrunDetayFragment" >

    <ImageView
        android:id="@+id/imageViewUrunDetay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/button_background"
        app:layout_constraintBottom_toTopOf="@+id/textViewUrunAdi1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSepeteEkle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="55₺ SEPETE EKLE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewArttir"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/toplama"
        app:layout_constraintBottom_toTopOf="@+id/buttonSepeteEkle"
        app:layout_constraintStart_toEndOf="@+id/textViewUrunAdeti" />

    <TextView
        android:id="@+id/textViewUrunAdeti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewArttir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewArttir"
        app:layout_constraintVertical_bias="0.47" />

    <ImageView
        android:id="@+id/imageViewAzalt"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/cikarma"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewArttir"
        app:layout_constraintEnd_toStartOf="@+id/textViewUrunAdeti"
        app:layout_constraintTop_toTopOf="@+id/imageViewArttir" />

    <TextView
        android:id="@+id/textViewUrunAdi1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:text="Ürün Adı"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewAzalt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewUrunFiyatı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="Ürün Fiyatı"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewArttir"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>